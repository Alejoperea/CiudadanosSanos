@page
@model CiudadanosSanos.Pages.Pacientes.EditModel
@{
	ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Paciente</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Paciente.Id" />
			<div class="form-group">
				<label asp-for="Paciente.Name" class="control-label"></label>
				<input asp-for="Paciente.Name" class="form-control" />
				<span asp-validation-for="Paciente.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Paciente.Edad" class="control-label"></label>
				<input asp-for="Paciente.Edad" class="form-control" />
				<span asp-validation-for="Paciente.Edad" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Paciente.Sexo" class="control-label"></label>
				<input asp-for="Paciente.Sexo" class="form-control" />
				<span asp-validation-for="Paciente.Sexo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Paciente.Telefono" class="control-label"></label>
				<input asp-for="Paciente.Telefono" class="form-control" />
				<span asp-validation-for="Paciente.Telefono" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Paciente.Description" class="control-label"></label>
				<input asp-for="Paciente.Description" class="form-control" />
				<span asp-validation-for="Paciente.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-page="./Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>

</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}